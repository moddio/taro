{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended",
        "standard-with-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/indent": [2, "tab", { "SwitchCase": 1 }],
        "no-tabs": 0,
        "@typescript-eslint/semi": [2, "always"],
        "@typescript-eslint/quotes": [2, "single"], // Backticks preferrably?
        "no-use-before-define": 0,
        "no-unused-vars": 0,
        "prefer-arrow-callback": 2,
        "prefer-template": 2,
        "@typescript-eslint/curly": 0
    }
}
